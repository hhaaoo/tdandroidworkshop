<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_decrease"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="90dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="30sp"
        android:onClick="decreaseAmount" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:text="$0"
        android:textSize="30sp"
        android:layout_toRightOf="@id/button_decrease" />

    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_increase"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:text="+"
        android:textSize="30sp"
        android:onClick="increaseAmount"
        android:layout_toRightOf="@+id/amount"/>

    <TextView
        android:id="@+id/paid_by"
        android:layout_below="@+id/button_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:textSize="30sp"
        android:text="Paid by" />

    <!-- TODO: 2 Add an onClick action on the card image -->
    <ImageView
        android:layout_below="@+id/paid_by"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/td_card"/>

    <!-- TODO: 1 style the button to make it located at the bottom of the screen, matching the width of the screen -->
    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay now"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_dark"
        android:onClick="payOrder" />

</RelativeLayout>